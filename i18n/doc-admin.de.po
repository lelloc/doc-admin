"        [ 'UserComment',      'Comment',     'comments',     1, 0, 'var', '', 0 ],\n"
"        [ 'ValidID',          'Valid',       'valid_id',     0, 1, 'int', '', 0 ],\n"
"\n"
"        # Dynamic field example\n"
"#        [ 'DynamicField_Name_X', undef, 'Name_X', 0, 0, 'dynamic_field', undef, 0, undef, undef, ],\n"
