msgid ""
"<graphic fileref=\"screenshots/appointment-calendar/calendaroverview-"
"appointmenteditrecurrencereeditsingle.png\" scalefit=\"1\" width=\"100%\" "
"contentdepth=\"100%\"></graphic>"
