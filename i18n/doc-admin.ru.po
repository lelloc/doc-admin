"$Self->{TicketAcl}->{'202-ACL-Process'} = {\n"
"    # match properties\n"
"    Properties => {\n"
"        User => {\n"
"            Role => [ 'MyRole' ],\n"
"        },\n"
"    },\n"
"    Possible => {\n"
"       Process => ['P1', 'P2', 'P3'],\n"
"    },\n"
"    PossibleNot => {\n"
"        Process => ['P4'],\n"
"    },\n"
"};\n"
"                    "

